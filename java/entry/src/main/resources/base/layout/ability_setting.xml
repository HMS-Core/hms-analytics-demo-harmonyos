<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <Text
        ohos:id="$+id:textView"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:start_margin="5vp"
        ohos:top_margin="5vp"
        ohos:layout_alignment="top|start"
        ohos:text="$string:favoriate_sport"
        ohos:text_size="$ohos:float:id_text_size_body2"
        />

   <TextField
       ohos:id="$+id:edit_favorite_sport"
       ohos:height="match_content"
       ohos:width="150vp"
       ohos:max_text_lines="1"
       ohos:multiple_lines="false"
       ohos:layout_alignment="top|center"
       ohos:top_margin="20vp"
       ohos:text_input_type="pattern_text"
       ohos:text_size="$ohos:float:id_text_size_body2"
       ohos:basement="#E8FF0000"
       ohos:hint="$string:input_hint"
       ohos:text="" />

    <Button
        ohos:id="$+id:save_setting_button"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="bottom|end"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_size="$ohos:float:id_text_size_body2"
        ohos:end_margin="5vp"
        ohos:bottom_margin="5vp"
        ohos:start_padding="15vp"
        ohos:end_padding="15vp"
        ohos:top_padding="5vp"
        ohos:bottom_padding="5vp"
        ohos:text="$string:save_setting_button"/>
</StackLayout>